<UserControl x:Class="WPFControls.CheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFControls"
             mc:Ignorable="d" Width="190" Height="40" MouseDown="UserControl_MouseDown">
    <Border BorderBrush="White" BorderThickness="1" CornerRadius="5" Background="#19FFFFFF">
        <DockPanel x:Name="grid" LastChildFill="False">
            <Border x:Name="BorderColor" CornerRadius="{Binding ActualHeight, ElementName=grid}"  Width="{Binding ActualHeight, ElementName=grid}" Height="{Binding ActualHeight, ElementName=grid}" Background="Chartreuse"/>
            <Label x:Name="TextLabel" Content="Text" FontFamily="Arial Black" BorderThickness="2,0,0,0" ClipToBounds="True" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>

        </DockPanel>
    </Border>

</UserControl>
